!! system color
*color0:     G_black
*color1:     G_red
*color2:     G_green
*color3:     G_yellow
*color4:     G_blue
*color5:     G_magenta
*color6:     G_cyan
*color7:     G_white
*color8:     G_hlblack
*color9:     G_hlred
*color10:    G_hlgreen
*color11:    G_hlyellow
*color12:    G_hlblue
*color13:    G_hlmagenta
*color14:    G_hlcyan
*color15:    G_hlwhite

!!xterm
xterm*background: G_black
xterm*foreground: G_hlwhite
xterm*cursorColor:				G_green
xterm*pointerColorBackground:	G_white
xterm*pointerColor:	G_hlwhite
xterm*saveLines: 10000
xterm*faceName: Ricty
xterm*faceSize: 20
!xterm*faceNameDoublesize: Ricty
!xterm*fontDoublesize: true
!xterm*utf8: 1
!xterm*locale: true
!xterm*cjkWidth: true
!XTerm*forcePackedFont: false
!xterm*eightBitInput: false
!xterm*eightBitOutput: true
!xterm*metaSendsEscape: true

!!urxvt
urxvt.background: G_black
urxvt.foreground: G_hlwhite
urxvt.fading:     20
urxvt.fadeColor:               G_black
urxvt.cursorColor:             G_green
urxvt.pointerColorBackground:  S_base01
urxvt.pointerColorForeground:  S_base1

urxvt.saveLines: 10000
urxvt.imLocale: ja_JP.UTF-8
urxvt.termName: rxvt
urxvt.geometry: 80x25
urxvt.tripleclick-words: true
!urxvt.letterSpace: -1
urxvt.lineSpace: 0
urxvt.scrollBar_right: true
urxvt.perl-lib: .urxvt/perl/
!urxvt.perl-ext-common: default,matcher
urxvt.perl-ext: default,xim-onthespot
urxvt.keysym.M-u: perl:url-select:select_next
urxvt.url-launcher: /usr/bin/xdg-open
urxvt.matcher.button: 3
urxvt.url-select.underline: true
!urxvt.inputMethod: fcitx
!urxvt.preeditType: OnTheSpot

! see /usr/share/fonts/X11/misc/fonts.alias
urxvt.font: \
 xft:Ricty:style=Regular:size=20, \
 xft:Symbola:style=Regular:size=20, \
 r24, kanji24
urxvt.boldFont:	\
 xft:Ricty:style=Bold:size=20, \
 xft:Symbola:style=Bold:size=20, \
 r24, kanji24
urxvt.italicFont: \
 xft:Ricty:style=Italic:size=20, \
 xft:Symbola:style=Italic:size=20, \
 r24, kanji24
urxvt.boldItalicFont: \
 xft:Ricty:style=Bold Italic:size=20, \
 xft:Symbola:style=Bold Italic:size=20, \
 r24, kanji24
urxvt.imFont: \
 xft:Ricty:style=Regular:size=20, \
 xft:Symbola:style=Regular:size=20, \
 r24, kanji24

!!urxvt-light
urxvt-light.background: honeydew
urxvt-light.foreground: black

!!emacs
emacs.borderWidth: 20
emacs.fontset-0: -shinonome-gothic-medium-r-normal--12-*
emacs.font:      -shinonome-gothic-medium-r-normal--12-*

!!xdvi
xdvi.shrinkFactor: 0
xdvi.noFileArgUseHistory: false

