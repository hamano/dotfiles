#define T_brightwhite   #eeeeec

!! solarized color theme
#define S_base03        #002b36
#define S_base02        #073642
#define S_base01        #586e75
#define S_base00        #657b83
#define S_base0         #839496
#define S_base1         #93a1a1
#define S_base2         #eee8d5
#define S_base3         #fdf6e3

#define S_black         S_base03
#define S_brightblack   S_base02
#define S_white         S_base2
#define S_brightwhite   S_base3

#define S_yellow        #b58900
#define S_orange        #cb4b16
#define S_red           #dc322f
#define S_magenta       #d33682
#define S_violet        #6c71c4
#define S_blue          #268bd2
#define S_cyan          #2aa198
#define S_green         #859900

!! tomorrow night color theme
#define TNE_background  #2d2d2d
#define TNE_currentline #393939
#define TNE_selection   #515151
#define TNE_foreground  #cccccc
#define TNE_comment     #999999
#define TNE_red         #f2777a

!! common terminal
*background: S_base03
*foreground: S_base1
*fading:     50
*fadeColor:               S_base03
*cursorColor:             S_base1
*pointerColorBackground:  S_base01
*pointerColorForeground:  S_base1

*color0:     S_black
*color1:     S_red
*color2:     S_green
*color3:     S_yellow
*color4:     S_blue
*color5:     S_violet
*color6:     S_cyan
*color7:     S_white
*color8:     S_brightblack
*color9:     S_orange
*color10:    T_brightgreen
*color11:    T_brightyellow
*color12:    C_brightblue
*color13:    S_magenta
*color14:    C_brightcyan
*color15:    S_brightwhite

!!xterm
xterm*saveLines: 10000
xterm*scrollbar: left
xterm*faceName: Ricty
xterm*faceNameDoublesize: Ricty:style=Regular
xterm*faceSize: 9
xterm*utf8: 1
xterm*locale: true
xterm*cjkWidth: true
xterm*eightBitInput: false
xterm*eightBitOutput: true

!!urxvt
!! atom dark-ui
urxvt.saveLines: 10000
urxvt.imLocale: ja_JP.UTF-8
urxvt.termName: rxvt
urxvt.geometry: 80x25
urxvt.tripleclick-words: true
urxvt.letterSpace: -1
urxvt.lineSpace: 0
urxvt.scrollBar_right: true
urxvt.perl-lib: .urxvt/perl/
!urxvt.perl-ext-common: default,matcher
urxvt.perl-ext-common: default,url-select
urxvt.keysym.M-u: perl:url-select:select_next
urxvt.url-launcher: /usr/bin/xdg-open
urxvt.matcher.button: 3
urxvt.url-select.underline: true
urxvt.preeditType: Root

urxvt.font: \
 xft:Ricty:style=Regular:size=9, \
 -shinonome-gothic-medium-r-normal--12-110-75-75-c-120-*, \
 r12, k12g
urxvt.boldFont:	\
 xft:Ricty:style=Bold:size=9, \
 -shinonome-gothic-bold-r-normal--12-110-75-75-c-120-*, \
 r12b, k12b
urxvt.italicFont: \
 xft:Ricty:style=Italic:size=9, \
 -shinonome-gothic-medium-i-normal--12-110-75-75-c-120-*, \
 r12i, k12i
urxvt.boldItalicFont: \
 xft:Ricty:style=Bold Italic:size=9, \
 -shinonome-gothic-bold-i-normal--12-110-75-75-c-120-*, \
 r12bi, k12bi
urxvt.imFont: \
 xft:Ricty:style=Regular:size=9, \
 -shinonome-gothic-medium-r-normal--12-110-75-75-c-120-*, \
 r12, k12g

!!urxvt-light
urxvt-light.background: honeydew
urxvt-light.foreground: black

!!emacs
emacs.borderWidth: 20
emacs.fontset-0: -shinonome-gothic-medium-r-normal--12-*
emacs.font:      -shinonome-gothic-medium-r-normal--12-*

!!xdvi
xdvi.shrinkFactor: 0
xdvi.noFileArgUseHistory: false

!!tgif
